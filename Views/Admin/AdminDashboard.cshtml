
@{
    ViewBag.Title = "AdminDashboard";
}







<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            height: 100vh;
            overflow: hidden;
            background-color: #f4f4f4;
            transition: background 0.3s, color 0.3s;
        }

        .dark-mode {
            background-color: #1a1a1a;
            color: white;
        }

        .navbar {
            background-color: #007bff;
            color: white;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 20px;
            width: 100%;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
            transition: background 0.3s;
        }

        .dark-mode .navbar {
            background-color: #333;
        }

        .navbar h1 {
            margin: 0;
        }

        .buttons {
            display: flex;
            align-items: center;
        }

            .buttons span {
                margin-right: 15px;
                font-size: 18px;
                color: white;
            }

            .buttons button {
                margin-left: 10px;
                padding: 10px 15px;
                border: none;
                cursor: pointer;
                border-radius: 5px;
                font-size: 16px;
            }

            .buttons .logout {
                background-color: #dc3545;
                color: white;
            }

        .dark-mode .buttons .logout {
            background-color: #b32d35;
        }

        .toggle-dark-mode {
            background-color: #555;
            color: white;
        }

        .dark-mode .toggle-dark-mode {
            background-color: #ccc;
            color: black;
        }

        .profile-pic {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            object-fit: cover;
            border: 4px solid white;
            margin-right: 10px;
        }

        .container {
            display: flex;
            width: 100%;
            height: calc(100vh - 60px);
            margin-top: 60px;
        }

        .sidebar {
            width: 250px;
            background-color: #343a40;
            color: white;
            height: 100%;
            padding-top: 20px;
            position: fixed;
            left: 0;
            top: 60px;
            transition: 0.3s;
        }

        .dark-mode .sidebar {
            background-color: #222;
        }

        .sidebar a {
            color: white;
            text-decoration: none;
            display: flex;
            align-items: center;
            padding: 15px 20px;
            font-size: 18px;
            transition: 0.3s;
        }

            .sidebar a i {
                margin-right: 10px;
            }

            .sidebar a:hover {
                background-color: #495057;
                transform: translateX(5px);
            }

        .dark-mode .sidebar a:hover {
            background-color: #333;
        }












        .dashboard-container {
            position: relative;
            width: 100%;
            height: 100vh;
            overflow: hidden;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .content {
            display: flex;
            justify-content: left;
            align-items: center;
            height: 100vh;
            width: 100vw; /* Ensuring full width */
            padding-left: 100px; /* Adding more space on the left */
            transform: translateX(-80px);
            overflow: visible; /* Prevents cutting */
        }


        .card {
            background: rgba(255, 255, 255, 0.2);
            padding: 40px;
            border-radius: 20px;
            box-shadow: 8px 12px 25px rgba(0, 0, 0, 0.15), -5px -5px 15px rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(20px);
            border: 2px solid rgba(255, 255, 255, 0.3);
            max-width: 450px;
            width: auto; /* Ensuring flexible width */
            text-align: center;
            overflow: visible; /* Ensuring no hidden part */
        }


            /* Improved title styling */
            .card h2 {
                margin-bottom: 20px;
                font-size: 28px;
                color: #ffcc00;
                font-weight: 700;
            }

            /* Improved paragraph readability */
            .card p {
                font-size: 18px;
                margin-bottom: 25px;
                color: #222; /* Darker for better contrast */
            }

            /* Remove default list styles */
            .card ul {
                list-style: none;
                padding: 0;
            }

                .card ul li {
                    margin: 15px 0;
                }

            /* Improved button-like links */
            .card a {
                color: rgb(18, 18, 18);
                text-decoration: none;
                font-size: 18px;
                font-weight: 500;
                transition: 0.3s;
                display: flex;
                align-items: center;
                padding: 12px;
                border-radius: 10px;
                background: rgba(255, 255, 255, 0.15);
                border: 1px solid rgba(255, 255, 255, 0.2);
            }

                /* Smooth hover effect */
                .card a:hover {
                    color: #ffcc00;
                    transform: translateX(5px);
                    background: rgba(255, 255, 255, 0.3);
                    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
                }

                /* Icon spacing */
                .card a i {
                    margin-right: 12px;
                    font-size: 22px;
                }
    </style>
</head>
<body>
    <div class="navbar">
        <h1>Welcome to the Admin  Dashboard</h1>
        <div class="buttons">
            <img id="navProfilePic" src="default-profile.png" class="profile-pic" alt="Profile">
            <span>Hello "@ViewBag.UserName"</span>
            <button class="toggle-dark-mode" onclick="toggleDarkMode()">Dark Mode</button>
            <button class="logout" onclick="location.href='@Url.Action("Login", "Account")'">Logout</button>
        </div>
    </div>

    <div class="container">
        <div class="sidebar">
            <a href="/Admin/Profile"><i class="fas fa-user"></i> Profile</a>
            <a href="/Admin/AdminCourses"><i class="fas fa-chalkboard-teacher"></i>Courses</a>
            <a href="/Admin/Payment"><i class="fas fa-wallet"></i> Payments</a>
            <a href="/Admin/Notices"><i class="fas fa-bell"></i> Notices</a>
            <a href="/Admin/Feedback"><i class="fas fa-comments"></i> User Feedback</a>

            <a href="/Admin/Contact"><i class="fas fa-envelope"></i> Contact</a>
            <a href="/Admin/ChangePassword"><i class="fas fa-key"></i> Change Password</a>
        </div>
    </div>




    <div class="dashboard-container">

        <div class="content">
            <div class="card">
                <h2>Welcome to Onshiksha 🎓</h2>
                <p>Enhance your skills with interactive learning. Choose an action below:</p>
                <ul>
                    <li><a href="/Admin/Notices"><i class="fas fa-bell"></i> Check Notifications</a></li>
                   
                </ul>
            </div>
        </div>
    </div>



</body>
</html>



<script>



    // Store user name in localStorage
    var userName = document.getElementById("userName").innerText;
    if (userName) {
        localStorage.setItem("UserName", userName);
    }

    // Retrieve user name when page loads
    window.onload = function () {
        var storedName = localStorage.getItem("UserName");
        if (storedName) {
            document.getElementById("userName").innerText = storedName;
        }
    };






    window.onload = function () {
        const savedProfilePic = localStorage.getItem('profilePic');
        if (savedProfilePic) {
            document.getElementById('navProfilePic').src = savedProfilePic;
        }

        // Theme Toggle Logic
        const themeToggleBtn = document.querySelector(".toggle-dark-mode");
        const body = document.body;

        // Load saved theme from localStorage
        if (localStorage.getItem("theme") === "dark") {
            body.classList.add("dark-mode");
            themeToggleBtn.textContent = "Light Mode"; // Update button text
        }

        // Toggle Dark Mode
        window.toggleDarkMode = function () {
            if (body.classList.contains("dark-mode")) {
                body.classList.remove("dark-mode");
                localStorage.setItem("theme", "light");
                themeToggleBtn.textContent = "Dark Mode"; // Update button text
            } else {
                body.classList.add("dark-mode");
                localStorage.setItem("theme", "dark");
                themeToggleBtn.textContent = "Light Mode"; // Update button text
            }
        };
    };
</script>

<style>
    .dark-mode {
        background-color: #121212;
        color: white;
    }
</style>

