@{
    ViewBag.Title = "Courses";
}

<style>
/* General Styles */
body {
    font-family: "Poppins", Arial, sans-serif;
    background-color: #f8f9fa;
    margin: 0;
    padding: 0;
    text-align: center;
}

/* Heading Styles */
h1 {
    color: #222;
    font-size: 28px;
    margin-top: 20px;
}

/* Course Details Container */
#approvedCourses {
    background: #ffffff;
    padding: 25px;
    max-width: 400px;
    margin: 20px auto;
    border-radius: 12px;
    box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.1);
    display: flex;
    flex-direction: column;
    align-items: center;
    transition: 0.3s ease-in-out;
}

/* Hover Effect */
#approvedCourses:hover {
    transform: scale(1.02);
}

/* Course Details Text */
#approvedCourses p {
    font-size: 16px;
    color: #444;
    text-align: left;
    width: 100%;
    padding: 5px 0;
    border-bottom: 1px solid #ddd;
}

/* Remove bottom border from last paragraph */
#approvedCourses p:last-child {
    border-bottom: none;
}

/* Buttons */
button {
    width: 90%;
    padding: 12px;
    border: none;
    border-radius: 8px;
    font-size: 16px;
    font-weight: bold;
    cursor: pointer;
    margin: 10px 0;
    transition: 0.3s;
}

/* Enroll Button */
.enroll-btn {
    background-color: #28a745;
    color: white;
}

.enroll-btn:hover {
    background-color: #218838;
}

/* Wishlist Button */
.wishlist-btn {
    background-color: #ff9800;
    color: white;
}

.wishlist-btn:hover {
    background-color: #e68900;
}

/* Responsive Design */
media (max-width: 480px) {
    #approvedCourses {
        width: 90%;
    }
}
</style>

<!DOCTYPE html>
<html>
<head>
    <title>Student Dashboard</title>
    <script>
        function displayApprovedCourses() {
            const storedDetails = localStorage.getItem("courseDetails"); // Get the data
            if (storedDetails) {
                const courseDetails = JSON.parse(storedDetails);
                document.getElementById("courseName").innerText = courseDetails.courseName;
                document.getElementById("fees").innerText = courseDetails.fees;
                document.getElementById("duration").innerText = courseDetails.duration;
                document.getElementById("date").innerText = courseDetails.date;
                document.getElementById("facultyName").innerText = courseDetails.facultyName;
            } else {
                alert("No courses found.");
            }
        }

        function enrollCourse() {
            alert("You have successfully enrolled in this course!");
        }

        function addToWishlist() {
            alert("Course added to your wishlist!");
        }

        window.onload = displayApprovedCourses;
    </script>
</head>
<body>
    <h1>Faculty Courses</h1>

    <div id="approvedCourses">
        <p>Course Name: <span id="courseName">Loading...</span></p>
        <p>Fees: <span id="fees">Loading...</span></p>
        <p>Duration: <span id="duration">Loading...</span></p>
        <p>Date: <span id="date">Loading...</span></p>
        <p>Faculty Name: <span id="facultyName">Loading...</span></p>
        <button class="enroll-btn" onclick="enrollCourse()">Enroll Now</button>
        <button class="wishlist-btn" onclick="addToWishlist()">Add to Wishlist</button>
    </div>

</body>
</html>
