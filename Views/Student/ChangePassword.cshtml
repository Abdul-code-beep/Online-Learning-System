
@{
    ViewBag.Title = "ChangePassword";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Change Password - Student Dashboard</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
            color: #333;
            padding: 20px;
        }

        .container {
            max-width: 500px;
            margin: 0 auto;
            padding: 20px;
            background-color: white;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
        }

        .change-password-form {
            margin-top: 30px;
        }

            .change-password-form input {
                width: 100%;
                padding: 12px;
                margin-bottom: 10px;
                border: 1px solid #ddd;
                border-radius: 8px;
                font-size: 1.1em;
            }

            .change-password-form button {
                background-color: #0056b3;
                color: #fff;
                padding: 12px 20px;
                border: none;
                border-radius: 8px;
                font-size: 1.1em;
                cursor: pointer;
                width: 100%;
            }

                .change-password-form button:hover {
                    background-color: #00408f;
                }

        .message {
            margin-top: 20px;
            text-align: center;
            font-size: 1.1em;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Change Password</h1>

        <!-- Change Password Form Section -->
        <form class="change-password-form" action="#" method="POST">
            <label for="current-password">Current Password</label>
            <input type="password" id="current-password" name="current-password" placeholder="Enter your current password" required>

            <label for="new-password">New Password</label>
            <input type="password" id="new-password" name="new-password" placeholder="Enter your new password" required>

            <label for="confirm-password">Confirm New Password</label>
            <input type="password" id="confirm-password" name="confirm-password" placeholder="Confirm your new password" required>

            <button type="submit">Change Password</button>
        </form>

        <!-- Success/Error Message Section -->
        <div class="message" id="message">
            <!-- Success or error messages will appear here -->
        </div>
    </div>
</body>
</html>
